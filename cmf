APEX




import { LightningElement, api, wire, track } from 'lwc';
import { getRecord, getFieldValue } from 'lightning/uiRecordApi';
import CLIENT_NAME_FIELD from '@salesforce/schema/Cash_Management_Form__c.Client_Name__c';
import CLIENT_SRF_FIELD from '@salesforce/schema/Cash_Management_Form__c.Client_SRF__c';
import CLIENT_TYPE_FIELD from '@salesforce/schema/Cash_Management_Form__c.Client_Type__c';

const FIELDS = [
    'Cash_Management_Form__c.Client_Name__c',
    'Cash_Management_Form__c.Client_SRF__c',
    'Cash_Management_Form__c.Client_Type__c'
];

export default class CashManagementForm extends LightningElement {
    @api recordId; // This will be the Id of the record you want to display
    @track clientType = '';

    @wire(getRecord, { recordId: '$recordId', fields: FIELDS })
    cashManagementForm;

    get clientName() {
        return getFieldValue(this.cashManagementForm.data, CLIENT_NAME_FIELD);
    }

    get clientSRF() {
        return getFieldValue(this.cashManagementForm.data, CLIENT_SRF_FIELD);
    }

    get clientTypeValue() {
        return getFieldValue(this.cashManagementForm.data, CLIENT_TYPE_FIELD);
    }

    handleClientTypeChange(event) {
        this.clientType = event.detail.value;
    }

    get clientTypeOptions() {
        return [
            { label: 'Commercial Financial Services Client', value: 'Commercial Financial Services Client' },
            { label: 'GBSC Serviced Client', value: 'GBSC Serviced Client' },
            { label: 'Private Banking CBR Client', value: 'Private Banking CBR Client' },
        ];
    }

    get isCommercialClient() {
        return this.clientType === 'Commercial Financial Services Client';
    }

    get isGBSCClient() {
        return this.clientType === 'GBSC Serviced Client';
    }

    get isPrivateBankingClient() {
        return this.clientType === 'Private Banking CBR Client';
    }
}




HTML


<template>
    <lightning-record-view-form record-id={recordId} object-api-name="Cash_Management_Form__c">
        <div class="slds-box slds-m-bottom_small">
            <lightning-output-field field-name="Client_Name__c"></lightning-output-field>
            <lightning-output-field field-name="Client_SRF__c"></lightning-output-field>
        </div>
    </lightning-record-view-form>

    <lightning-combobox
        name="clientType"
        label="Client Type"
        value={clientType}
        options={clientTypeOptions}
        onchange={handleClientTypeChange}>
    </lightning-combobox>

    <template if:true={isCommercialClient}>
        <lightning-accordion>
            <lightning-accordion-section name="CommonRequests" label="Common Requests">
                <lightning-input type="checkbox" label="Change Address"></lightning-input>
                <lightning-input type="checkbox" label="Change Contact Information"></lightning-input>
                <lightning-input type="checkbox" label="Cancel Services"></lightning-input>
            </lightning-accordion-section>
            <lightning-accordion-section name="CollectionProducts" label="Collection Products">
                <!-- Add specific fields for Collection Products here -->
            </lightning-accordion-section>
            <lightning-accordion-section name="PaymentsProducts" label="Payments Products">
                <!-- Add specific fields for Payments Products here -->
            </lightning-accordion-section>
            <lightning-accordion-section name="InformationControlProducts" label="Information & Control Products">
                <!-- Add specific fields for Information & Control Products here -->
            </lightning-accordion-section>
        </lightning-accordion>
    </template>

    <template if:true={isGBSCClient}>
        <lightning-accordion>
            <lightning-accordion-section name="RBCExpressServices" label="RBC Express Services">
                <lightning-input type="checkbox" label="ACH Direct Deposit"></lightning-input>
                <!-- Add specific fields for RBC Express Services here -->
            </lightning-accordion-section>
            <lightning-accordion-section name="BusinessBankingAPIs" label="Business Banking APIs">
                <!-- Add specific fields for Business Banking APIs here -->
            </lightning-accordion-section>
            <lightning-accordion-section name="InformationControlProducts" label="Information & Control Products">
                <!-- Add specific fields for Information & Control Products here -->
            </lightning-accordion-section>
        </lightning-accordion>
    </template>

    <template if:true={isPrivateBankingClient}>
        <lightning-accordion>
            <lightning-accordion-section name="CommonRequests" label="Common Requests">
                <lightning-input type="checkbox" label="Change Address"></lightning-input>
                <lightning-input type="checkbox" label="Change Contact Information"></lightning-input>
                <lightning-input type="checkbox" label="Cancel Services"></lightning-input>
            </lightning-accordion-section>
            <lightning-accordion-section name="PaymentsProducts" label="Payments Products">
                <!-- Add specific fields for Payments Products here -->
            </lightning-accordion-section>
            <lightning-accordion-section name="InformationControlProducts" label="Information & Control Products">
                <!-- Add specific fields for Information & Control Products here -->
            </lightning-accordion-section>
        </lightning-accordion>
    </template>
</template>
